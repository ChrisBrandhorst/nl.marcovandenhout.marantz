{
    "id": "nl.marcovandenhout.marantz",
    "name": {
        "en": "Marantz"
    },
    "version": "0.0.2",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Marco van den Hout",
        "email": "marco@vandenhout.org"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "description": {
    "en": "Marantz IP control app for Homey",
    "nl": "Dit is een Marantz IP aansturing app voor Homey"
    },
    "dependencies": {
    		"net": "*"
    },
    "drivers": [
      {
          "id": "amplifier",
          "name": {
              "en": "Marantz amplifier",
              "nl": "Marantz versterker"
          },
          "images": {
              "large": "drivers/amplifier/assets/images/large.jpg",
              "small": "drivers/amplifier/assets/images/small.jpg"
          },
          "class": "other",
          "capabilities": [ "" ],
          "pair": [
            {
              "id": "start"
            },
            {
              "id": "list_devices",
              "template": "list_devices",
              "navigation": {
                  "next": "add_amplifier"
              }
            },
            {
              "id": "add_amplifier",
              "template": "add_devices"
            }
          ]
      }
    ],
    "flow": {
        "actions": [
        {
            "id": "powerOn",
            "title": {
                "en": "Turn power on",
                "nl": "Zet aan"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "style": {
                  "width": "50%"
                },
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        },
        {
            "id": "standby",
            "title": {
                "en": "Go to standby",
                "nl": "Ga naar standby"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "style": {
                  "width": "50%"
                },
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        },
        {
            "id": "changeInput",
            "title": {
                "en": "Switch input",
                "nl": "Schakel input"
            },
            "args": [
              {
                "name": "input",
                "type": "autocomplete",
                "placeholder": {
                  "en": "input",
                  "nl": "input"
                }
              },
              {
                "name": "device",
                "type": "device",
                "style": {
                  "width": "50%"
                },
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        },
        {
            "id": "mute",
            "title": {
                "en": "Mute",
                "nl": "Mute"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "style": {
                  "width": "50%"
                },
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        },
        {
            "id": "unMute",
            "title": {
                "en": "Turn mute off",
                "nl": "Zet mute uit"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "style": {
                  "width": "50%"
                },
                "placeholder": {
                  "en": "Select amplifier",
                  "nl": "Selecteer versterker"
                }
              }
            ]
        }
      ]
    }
}
